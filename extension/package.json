{
  "name": "snippy",
  "displayName": "Snippy",
  "publisher": "Snippy",
  "description": "Code once, use forever. Speed up development with shortcuts for your most used file templates.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/benlikescode/snippy",
    "directory": "extension"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "template",
    "snippet",
    "component",
    "boilerplate"
  ],
  "activationEvents": [
    "onCommand:snippy.addFileTemplate",
    "onStartupFinished",
    "onCommand:snippy.selectWorkspace",
    "onCommand:snippy.handleLogin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippy.addFileTemplate",
        "title": "Use Snippy Template"
      },
      {
        "command": "snippy.selectWorkspace",
        "title": "Select Workspace"
      },
      {
        "command": "snippy.handleLogin",
        "title": "Login To Snippy"
      },
      {
        "command": "snippy.getGitHubUser",
        "title": "Get GitHub User"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "snippy.addFileTemplate",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "snippy.addFileTemplate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.9",
    "@types/vscode": "1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "handlebars": "^4.7.8",
    "node-fetch": "2.6.7"
  }
}
